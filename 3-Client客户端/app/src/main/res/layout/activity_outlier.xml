<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/back_qian"
        tools:context="com.DO.Prediction.client.HistoryActivity">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/backup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_backup" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常检测"
                    android:textColor="@color/contents_text"
                    android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:text="今日监测" />

        <Button
                android:id="@+id/search_now"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/smssdk_authorize_text_size_s"
                android:layout_height="match_parent"
                android:background="@drawable/button_style"
                android:textColor="@color/white"
                android:textSize="@dimen/smssdk_authorize_text_size_l"
                android:text="今日监测" />

        <Button
                android:id="@+id/search_past_one"
                android:layout_margin="@dimen/smssdk_authorize_text_size_s"
                android:layout_width="match_parent"
                android:background="@drawable/button_style"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/smssdk_authorize_text_size_l"
                android:text="昨日监测" />


        <Button
                android:id="@+id/search_past_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_margin="@dimen/smssdk_authorize_text_size_s"
                android:background="@drawable/button_style"
                android:textColor="@color/white"
                android:textSize="@dimen/smssdk_authorize_text_size_l"

                android:text="过去三日监测" />

        <Button
                android:id="@+id/search_past_seven"
                android:layout_margin="@dimen/smssdk_authorize_text_size_s"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_style"
                android:textColor="@color/white"
                android:textSize="@dimen/smssdk_authorize_text_size_l"
                android:text="过去七日监测" />


    </LinearLayout>


</LinearLayout>
