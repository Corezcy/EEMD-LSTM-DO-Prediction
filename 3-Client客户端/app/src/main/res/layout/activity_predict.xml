<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/back_qian"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/backup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/ic_backup" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:text="溶解氧预测"
                    android:textColor="@color/contents_text"
                    android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
            android:id="@+id/predict_one"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smssdk_authorize_text_size_s"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:textSize="@dimen/smssdk_authorize_text_size_l"
            android:text="预测未来一天溶解氧数据"/>

    <Button
            android:id="@+id/predict_three"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smssdk_authorize_text_size_s"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:textSize="@dimen/smssdk_authorize_text_size_l"
            android:text="预测未来三天溶解氧数据"/>

    <Button
            android:id="@+id/predict_seven"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/smssdk_authorize_text_size_s"
            android:background="@drawable/button_style"
            android:textColor="@color/white"
            android:textSize="@dimen/smssdk_authorize_text_size_l"
            android:layout_height="wrap_content"
            android:text="预测未来七天溶解氧数据"/>

    <WebView
            android:id="@+id/predict_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="暂无预测数据" />

</LinearLayout>